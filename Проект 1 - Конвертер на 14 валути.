    denar = float(input("Внеси колку денари сакаш да смениш во лири:"))
    lira = macedonian_to_turkish(denar)
    print(f"{denar} македонски денари изнесуваат {lira} турски лири.")
elif y == '25':
    kruna = float(input("Внеси колку чешки круни сакаш да смениш во денари:"))
    denar = czech_to_macedonian(kruna)
    print(f"{kruna} чешки круни изнесуваат {denar} македонски денари.")
elif y == '26':
    denar = float(input("Внеси колку денари сакаш да смениш во чешки круни:"))
    kruna = macedonian_to_czech(denar)
    print(f"{denar} македонски денарии изнесуваат {kruna} чешки круни.")
elif y == '27':
    forint = float(input("Внеси колку унгарски форинти сакаш да смени во денари:"))
    denar = hungarian_to_macedonian(forint)
    print(f"{forint} унагарски форинти изнесуваат {denar} македонски денари.")
elif y == '28':
    denar = float(input("Внеси колку денари сакаш да смениш во унгарски форинти:"))
    forint = macedonian_to_hungarian(denar)
    print(f"{denar} македонски денари изнесуваат {forint} унгарски форинти.")
elif y == '29':
    zlota = float(input("Внеси колку полски злоти сакаш да смениш во македонски денари:"))
    denar = polish_to_macedonian(zlota)
    print(f"{zlota} полски злоти изнесуваат {denar} македонски денари.")
elif y == '30':
